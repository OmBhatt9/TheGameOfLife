<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/scrollinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/amaticbold"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="About The App"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/conwaypic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_home"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/conwaypic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_home"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/conwayinfo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/ubuntureg"
                android:gravity="left"
                android:text="@string/conway_info1"
                android:textSize="22sp"
                android:layout_below="@id/conwaypic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/conwaypic"
                app:layout_constraintTop_toBottomOf="@id/conwaypic"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/johninterview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntureg"
                android:clickable="true"
                android:autoLink="all"
                android:textSize="20sp"
                android:text=" Email: ombb2@illinois.edu\n\n
Email: yangkai4@illinois.edu\n\n
Phone: +12177990905\n\n
Location: \n https://goo.gl/maps/DwNN3snm9h3WBqbz6\n\n\n"
                android:layout_below="@id/conwayinfo"
                android:focusable="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>